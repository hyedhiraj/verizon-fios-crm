<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Background"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <background
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Select background"
                                fieldDescription="Select background"
                                name="./background">
                                <items jcr:primaryType="nt:unstructured">
                                    <none
                                        jcr:primaryType="nt:unstructured"
                                        text="None"
                                        value="none"/>                                
                                    <gray
                                        jcr:primaryType="nt:unstructured"
                                        text="Gray"
                                        value="#d9dbdb"/>
                                    <white
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="#fff"/>
									<black
                                        jcr:primaryType="nt:unstructured"
                                        text="Black"
                                        value="#000"/>
                                </items>
                            </background>
                            <fontSize
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Select font size"
                                fieldDescription="Select Font Size"
                                name="./fontSize">
                                <items jcr:primaryType="nt:unstructured">
                                    <small
                                        jcr:primaryType="nt:unstructured"
                                        text="Small"
                                        value="24px"/>
                                    <medium
                                        jcr:primaryType="nt:unstructured"
                                        text="Medium"
                                        value="50px"/>
                                    <large
                                        jcr:primaryType="nt:unstructured"
                                        text="Large"
                                        value="93px"/>
                                </items>
                            </fontSize>
                            <fontColor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Select font color"
                                fieldDescription="Select Font Color"
                                name="./fontColor">
                                <items jcr:primaryType="nt:unstructured">
                                    <black
                                        jcr:primaryType="nt:unstructured"
                                        text="Black"
                                        value="#303030"/>                                
                                    <gray
                                        jcr:primaryType="nt:unstructured"
                                        text="Gray"
                                        value="#747676"/>
                                    <white
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="#fff"/>
                                </items>
                            </fontColor>
                            <fontWeight
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Select font weight"
                                fieldDescription="Select Font Weight"
                                name="./fontWeight">
                                <items jcr:primaryType="nt:unstructured">
                                    <normal
                                        jcr:primaryType="nt:unstructured"
                                        text="Normal"
                                        value="normal"/>
                                    <bold
                                        jcr:primaryType="nt:unstructured"
                                        text="Bold"
                                        value="bold"/>
                                </items>
                            </fontWeight>
                        </items>
                    </column>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
